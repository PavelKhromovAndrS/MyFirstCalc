+            @Override
+            public void onClick(View view) {
+                resultView.setText(null);
+                digitOne += "1";
+                resultView.setText(fullDigit1 += digitOne);
+                digitOne = "";
+            }
+        });
+        findViewById(R.id.calc_button_2).setOnClickListener(new View.OnClickListener() {
